@model Data.ViewModels.CatalogViewModel

@{
    ViewData["Title"] = "CatalogPage";
}

<style>
    table {
        width: 80%; /* Ширина таблицы */
        /*border: 1px solid green;*/ /* Рамка вокруг таблицы */
        margin: auto; /* Выравниваем таблицу по центру окна  */
        font-size: 18px;
        font-family: 'Century Gothic';
    }

/*    img {
        width: 300px;
        transition: width 0.5s ease;
    }

    #statya:hover img {
        width: 500px;
    }*/
    img.myimage {
        width: 100%;
        height: 100%;
        transition: 1s;
    }

        img.myimage:hover {
            position: relative;
            transform: scale(1.1);
            -webkit-transform: scale(1.1);
            -ms-ransform: scale(1.1);
        }

    a.myhref {
        font-size: 18px;
        font-family: 'Century Gothic';
        text-decoration: none;
    }

        a.myhref:link {
            color: black;
            text-decoration: none;
        }

        a.myhref:visited {
            color: black;
            text-decoration: none;
        }

        a.myhref:focus {
            color: black;
            text-decoration: none;
        }

        a.myhref:hover {
            color: black;
            text-decoration: none;
            /*            background: #cdcdcd;*/
            border: 1px solid black;
        }

        a.myhref:active {
            color: black;
            text-decoration: none;
            background: #9a9a9a;
        }
    /*td {
        text-align: center;*/ /* Выравниваем текст по центру ячейки */
    /*}*/
</style>

<body style="opacity:1;transition:.5s;">
    @if (Model.user_login != "")
    {
        <footer class="border-top footer text-muted">
            <div class="container">

                <td align="right"> Вы вошли в аккаунт под логином @Model.user_login</td>
            </div>
        </footer>
    }
    <p>
        <h3>Каталог автосалона</h3>
    </p>
    <!--<table class="table">-->
    @*<thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Mark)</th>
                <th>@Html.DisplayNameFor(model => model.Model)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
            </tr>
        </thead>*@
    <!--<tbody>-->
    @foreach (var item in Model.catalogModels)
    {
        var imageSource = $"/Content/{item.Model}.jpg";
        <table class="table">
            <tr>
                <td  align="center" width: 80%>
                    <a href="@Url.Action("CarPage", "Home", new { CarId = item.AutoId })">
                        <img  class ="myimage" src=@imageSource alt="hh" />
                    </a>
                </td>
            </tr>
        </table>
        <table class="table">
            <tr>
                <td align="left" width=20%>
                    @Html.DisplayFor(modelItem => item.Mark) @Html.DisplayFor(modelItem => item.Model)

                </td>
                <td align="left" width=15%>
                    от @Html.DisplayFor(modelItem => item.Price) ₽
                </td>
                <td align="right">
                    <a class="myhref" href="@Url.Action("CarPage", "Home", new { CarId = item.AutoId })">
                        Подробнее
                    </a>
                </td>
            </tr>
        </table>
    }

</body>